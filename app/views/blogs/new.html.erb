<div class="main-top">
<h2>投稿したってや</h2>
<%= form_with(model: @blog, local: true, url: confirm_blogs_path) do |form| %>
    <div>
        <%= image_tag(@blog.blog_image.url) if @blog.blog_image && @blog.blog_image.url %>
        <%= form.file_field :blog_image %>
        <%= form.hidden_field :blog_image_cache %>
    </div><br>
    <div>
        <%= form.label :コメントしてな %><br>
        <%= form.text_field :content %>
    </div><br>
    <%= form.submit "投稿するで" %>
<% end %>
</div>