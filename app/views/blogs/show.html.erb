<div class="main-top">
  <h1>こんな感じやねん</h1>
    <div class="index-window">
      <% if @blog.blog_image? %>
        <p><%= image_tag @blog.blog_image.url %></P>
      <% end %>
      <h2>:<%= @blog.content %></h2>
      <p style="color:gray; text-align: right" ><%= @blog.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
      <div style="text-align: right; margin-right:10px">
        <%= link_to "編集するで", edit_blog_path(@blog.id)  %>
        <%= link_to 'ほかすで', blog_path(@blog.id),data: { confirm: 'ほかしても、ええのん？' }, method: :delete %>
      </div>
    </div>
  </div>
</div>